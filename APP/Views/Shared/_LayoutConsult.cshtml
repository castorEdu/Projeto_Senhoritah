<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ConfectionaryApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/releases.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ConfectionaryApp.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="page">
        <div style="height: 10%; width: 100%;">
            <div class="d-flex align-items-center justify-content-center" style="background-color: #6d3a0c; height: 100%; width:320px; border-radius: 0px 0px 20px 0px;">
                <img src="~/images/srtah_logo_resize.png" style="width: 150px; border:none" alt="Alternate Text" />
            </div>
        </div>
        <div class="d-flex">
            <div class="sidebar">
                <div class="sidebar-links">
                    <a asp-controller="Home" asp-action="Index" class="sidebar-links-section">
                        <li style="font-weight: bold;">Home</li>
                    </a>
                    <a asp-controller="Releases" asp-action="ReleaseClients" class="sidebar-links-section">
                        <li>Lançamento</li>
                    </a>
                    <a asp-controller="Consult" asp-action="ConsultClientIndex" class="sidebar-links-section sidebar-links-section-active">
                        <li>Consulta</li>
                    </a>
                    <a asp-controller="Config" asp-action="ConfigIndex" class="sidebar-links-section">
                        <li>Configuration</li>
                    </a>
                    <a href="#" class="sidebar-links-section">
                        <li>Saída</li>
                    </a>
                    <a href="#" class="sidebar-links-section">
                        <li>Pedido</li>
                    </a>
                </div>
            </div>
            <div style="width: 94vw;">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>