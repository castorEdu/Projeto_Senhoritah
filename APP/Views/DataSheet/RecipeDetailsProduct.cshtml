@model ProductsRecipeModel
@{
    Layout = "_LayoutHome";
}
<h1 style ="color: #412E27; padding: 10px 0 10px 0">@Model.Product.Name</h1>
    <form asp-action="RecipeProductUpdate" class="card-content" style="padding: 20px; width: 40%">
        <div asp-validation-summary="ModelOnly"></div>
        <input asp-for="Id" type="hidden" />
        <input asp-for="IdProduct" type="hidden" />
        <input asp-for="IdRecipe" type="hidden" />
        <input asp-for="ProductName" type="hidden" />
        <input asp-for="Price" type="hidden" />
        <input asp-for="Product.Id" type="hidden" />
        <input asp-for="Product.Name" type="hidden" />
        <input asp-for="Product.Brand" type="hidden" />
        <input asp-for="Product.ProductCategory" type="hidden" />
        <div class="d-flex flex-column" style="margin-bottom: 1rem">
            <label>Unidade</label>
            <input asp-for="Unit" class="input-style"/>
        </div>
        <div class="d-flex flex-column" style="margin-bottom: 1rem">
            <label>Quantidade</label>
            <input asp-for="Amount" class="input-style" />
        </div>
        <div class="d-flex justify-content-center">
            <input type="submit" class="btn btn-success" value="Salvar" style="width: 150px"/>
        </div>
    </form>