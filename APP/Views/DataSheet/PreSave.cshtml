@model PreSaveDetailsViewModel
@{
    Layout = "_LayoutHome";
}
<h1 style="color: #412E27; padding: 10px 0 10px 0">Detalhes Ficha Tecnica</h1>
<div class="d-flex flex-column align-items-center" style="width: 100%; height: 89vh;">
    <form asp-action="Save">
        <div style="border-radius: 10px;background-color: #F5F5F5;-webkit-box-shadow: 11px 11px 13px #e6e6e6, -11px -11px 13px #ffffff;box-shadow: 11px 11px 13px #e6e6e6, -11px -11px 13px #ffffff; margin-top: 2rem;width: 800px; padding: 20px; height: 80%;max-height: 80%; overflow-y: auto">
            <h3>@Model.Name</h3>
            <hr/>
            @foreach (var item in Model.products)
            {
                <div class="d-flex">
                    <div style="width: 70%;">
                        <p style="font-size: 10px; color: #ACACAC;padding: 0; margin: 0">Nome</p>
                        <div>@item.ProductName</div>
                    </div>
                    <div style="width: 10%; text-align: center;">
                        <p style="font-size: 10px; color: #ACACAC;padding: 0; margin: 0">Unidade</p>
                        <div>@item.Unit</div>
                    </div>
                    <div style="width: 20%; text-align: center;">
                        <p style="font-size: 10px; color: #ACACAC;padding: 0; margin: 0">Quantidade</p>
                        <div>@item.Amount</div>
                    </div>
                    <div style="width: 20%; text-align: center;">
                        <p style="font-size: 10px; color: #ACACAC;padding: 0; margin: 0">Peso</p>
                        <div>
                            @item.Weight
                            @if(item.Unit != "un")
                            {
                                @item.Unit
                            }else{
                                @item.Product.Unit
                            }
                        </div>
                    </div>
                </div>
                <hr/>
            }
        </div>
        <div>
            <button type="submit" class="btn btn-success" style="margin-top: 2rem">Salvar</button>
        </div>
    </form>
</div>