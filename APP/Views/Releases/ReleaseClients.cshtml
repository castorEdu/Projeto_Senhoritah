@model ClientViewModel
@{
    Layout = "_LayoutHome";
}
<h1 style="color: #FFFFFF; padding: 10px 0 10px 0">Clientes</h1>
<div class="main-content">
    @if (Model.ClientModel.IsSave)
    {
        <div class="releases-message-success">
            <span style="font-weight: bolder;">Registro salvo com sucesso!</span>
        </div>
    }
    <div class="content-sidebar">
        <h4 style="color: #FFFFFF">Adiconar Clientes</h4>
        <form asp-action="ReleaseCreateClient" class="form-releases">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="d-flex flex-column" style="margin-bottom: .5rem;">
                <input name="Name" value="" placeholder="Nome Cliente" class="input-style" style="width: 250px" />
                <span asp-validation-for="ClientModel.Name"></span>
            </div>
            <div class="d-flex flex-column" style="margin-bottom: .5rem;">
                <input name="PhoneNumber" value="" placeholder="Nº Telefone" class="input-style" style="width: 250px"/>
                <span asp-validation-for="ClientModel.PhoneNumber"></span>
            </div>
            <div class="d-flex justify-content-end">
                <input class="btn-success" type="submit" value="Salvar" />
            </div>
        </form>
    </div>
    <div class="content-page">
        <form asp-action="ReleaseSearchClient">
            <input name="Name" value="" class="input-style" style="background-color: #aeaeae; width: 500px" placeholder="Pesquisar" autocomplete="off" />
            <input type="submit" value="Buscar" style="background-color: #0C5DF4;color: #FFFFFF; padding: 9px; border-radius: 5px; border: none" />
        </form>
        <hr />
        @foreach (var client in Model.Clients)
        {
            <div style="background-color: #202739; border-radius: 10px; padding: 10px; display:flex; align-items: center; width: 100%; margin-bottom: .5rem;">
                <div style="width: 40%;">
                    <div style="font-size: 10px; color: #ACACAC">Nome</div>
                    <div style="color: #FFFFFF">@Html.DisplayFor(cli => client.Name)</div>
                </div>
                <div style="width: 30%; color: #FFFFFF">
                    <div style="font-size: 10px; color: #ACACAC">Telefone</div>
                    <div style="color: #FFFFFF">@Html.DisplayFor(cli => client.PhoneNumber)</div>
                </div>
                <div>
                    <a asp-action="">
                        <img src="~/icons/edit.svg" alt="Alternate Text" />
                    </a>
                    <a asp-controller="Releases" asp-action="ReleaseDeleteClient" asp-route-id="@client.Id">
                        <img src="~/icons/delete.svg" alt="Alternate Text" />
                    </a>
                </div>
            </div>
        }
    </div>
</div>

