@model PurchaseViewModel
<h1 style="color: #412E27; padding: 10px 0 10px 0">Entrada</h1>
<div class="card-content" style="width: 100%; height: 89vh; padding: 20px;">
    <div>
        <div class="d-flex justify-content-between" style="padding: 10px;">
            <h4>Gastos Recorrentes</h4>
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#CreateBillModal">
                Lançar Gasto
            </button>
        </div>
        <div class="d-flex" style="width: 100%; height: 240px; padding: 20px;background-color: #FFF; overflow-x: auto; border-radius: 10px;">
            @foreach (var item in Model.ListBills)
            {
                <div style="width: 200px; height: 100%; background-color: #eaeaea; border-radius: 10px; padding: 10px; margin-right: 1rem">
                    <div class="d-flex justify-content-end" style="width: 100%;">
                        <a asp-action="DeleteBill" asp-route-id="@item.Id">
                            <img src="~/icons/delete_icon.svg" alt="Alternate Text" />
                        </a>
                    </div>
                    <div class="d-flex justify-content-center">
                        <div style="background-color: #FFF; width: fit-content; padding: 20px; border-radius: 100%">
                            <img src="~/icons/payments_icon.svg" alt="Alternate Text" />
                        </div>
                    </div>
                    <h6 style="width: 100%; text-align: center; padding: 10px">@item.Name</h6>
                    <div class="d-flex align-items-center" style="background-color: #FFF; height: 45px; border-radius: 20px;">
                        <img src="~/icons/money_icon.svg" alt="Alternate Text" style="" />
                        <div class="d-flex align-items-center justify-content-end" style="width: 100%; height: 100%; padding: 15px">
                            <b style="color: red">@item.Price</b>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="d-flex justify-content-between" style="padding: 10px; margin-top: 1rem; margin-bottom: 1rem">
            <h4>Histórico de compras</h4>
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#CreatePurchaseModal">Lançar compra</button>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Un. Compra</th>
                    <th>Quantidade</th>
                    <th>Volume</th>
                    <th>Peso</th>
                    <th>Data</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </table>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="CreateBillModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Adiconar Recorrência</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="CreateBill">
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="d-flex flex-column">
                        <labe>Nome</labe>
                        <input asp-for="Bills.Name" class="input-style" autocomplete="off" />
                        <span asp-validation-for="Bills.Name"></span>
                    </div>
                    <div class="d-flex flex-column">
                        <label>Valor</label>
                        <input asp-for="Bills.Price" class="input-style" autocomplete="off" />
                        <span asp-validation-for="Bills.Price"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="CreatePurchaseModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Adiconar Recorrência</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="CreatePurchase">
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="d-flex flex-column">
                        <labe>Nome</labe>
                        <input asp-for="Bills.Name" class="input-style" autocomplete="off" />
                        <span asp-validation-for="Bills.Name"></span>
                    </div>
                    <div class="d-flex flex-column">
                        <label>Valor</label>
                        <input asp-for="Bills.Price" class="input-style" autocomplete="off" />
                        <span asp-validation-for="Bills.Price"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
