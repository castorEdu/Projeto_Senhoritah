@model ProductViewModel
@{
    Layout = "_LayoutHome";
}
<h1 style="color: #412E27; padding: 10px 0 10px 0">Produtos</h1>
<div class="d-flex" style="width: 100%">
    <div style="height:89vh ;width: 100%;padding: 20px ; border-radius: 10px;background-color: #F5F5F5;-webkit-box-shadow: 11px 11px 13px #e6e6e6, -11px -11px 13px #ffffff;box-shadow: 11px 11px 13px #e6e6e6, -11px -11px 13px #ffffff; ">
        <h3>Editar Produto</h3>
        <form asp-action="EditProduct">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="ProductModel.Id" />
            <div class="d-flex flex-column" style="width: 400px; margin-bottom: .5rem">
                <label asp-for="ProductModel.Name" ></label>
                <input asp-for="ProductModel.Name" class="input-style" style="background-color: #eaeaea; color: #000000;" />
                <span asp-validation-for="ProductModel.Name" class="text-danger"></span>
            </div>
            <div class="d-flex flex-column" style="width: 400px;margin-bottom: .5rem">
                <label asp-for="ProductModel.ProductCategory"></label>
                <input asp-for="ProductModel.ProductCategory" class="input-style" style="background-color: #eaeaea; color: #000000;" />
                <span asp-validation-for="ProductModel.ProductCategory" class="text-danger"></span>
            </div>
            <div class="d-flex flex-column" style="width: 400px;margin-bottom: 1rem">
                <label asp-for="ProductModel.Brand"></label>
                <input asp-for="ProductModel.Brand" class="input-style" style="background-color: #eaeaea; color: #000000;" />
                <span asp-validation-for="ProductModel.Brand" class="text-danger"></span>
            </div>
            <div class="d-flex flex-column" style="width: 400px;margin-bottom: 1rem">
                <select asp-for="Unit" asp-items="Model.Units" style="width: 100%" class="input-style">
                    <option value="">Selecione ...</option>
                </select>
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between align-items-center" style="width: 400px;">
                <a asp-action="ProductIndex">Voltar</a>
                <input class="btn btn-success" type="submit" name="name" value="Atualizar" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}