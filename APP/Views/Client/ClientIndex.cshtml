@model ClientViewModel
@{
    Layout = "_LayoutHome";
}
<h1 style="color: #FFFFFF; padding: 10px 0 10px 0">Clientes</h1>
<div class="main-content">
    @if (Model.ClientModel.IsSave)
    {
        <div class="releases-message-success">
            <span style="font-weight: bolder;">Registro salvo com sucesso!</span>
        </div>
    }
    <div class="content-sidebar">
        <h4 style="color: #FFFFFF">Adiconar Clientes</h4>
        <form asp-action="Create" class="form-releases">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="d-flex flex-column" style="margin-bottom: .5rem;">
                <input asp-for="ClientModel.Name" value="" placeholder="Nome Cliente" class="input-style" style="width: 250px" />
                <span asp-validation-for="ClientModel.Name" class="text-danger"></span>
            </div>
            <div class="d-flex flex-column" style="margin-bottom: .5rem;">
                <input asp-for="ClientModel.PhoneNumber" value="" placeholder="Nº Telefone" class="input-style" style="width: 250px" />
                <span asp-validation-for="ClientModel.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-end">
                <input class="btn btn-success" type="submit" value="Salvar" />
            </div>
        </form>
    </div>
    <div class="content-page">
        <form asp-action="SearchClient">
            <input name="Name" value="" class="input-style" style="background-color: #aeaeae; width: 500px" placeholder="Pesquisar" autocomplete="off" />
            <input type="submit" value="Buscar" style="background-color: #0C5DF4;color: #FFFFFF; padding: 9px; border-radius: 5px; border: none" />
        </form>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Telefone</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Model.Clients)
                {
                    <tr>
                        <td>@Html.DisplayFor(p => client.Name)</td>
                        <td>@Html.DisplayFor(p => client.PhoneNumber)</td>
                        <td>
                            <a asp-controller="Client" asp-action="ClientDetails" asp-route-id="@client.Id" style="cursor: pointer;"><img src="~/icons/edit_black.svg" alt="edit" /></a>
                            <a id="showModal" onclick="Confirm(@client.Id)" style="cursor: pointer;"><img src="~/icons/delete.svg" alt="delete" /></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<input type="hidden" id="idDelete" />
<!-- DELETE -->
<div class="modal fade" id="DeleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="DeleteProduct">
                <input type="hidden" id="idDelete" />
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Confirmar Ação!</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Deseja realmente deletar esse cliente?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button id="btnDelete" type="button" class="btn btn-danger">Deletar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>

        $(document).ready(function () {
            $("#btnDelete").click(function () {
                var idD = $("#idDelete").val();
                $.ajax({
                    type: "POST",
                    url: "/Client/DeleteClient",
                    data: { id: idD },
                    success: function (result) {
                        if (result) {
                            $("#idDelete").val(null);
                            window.location.href = "/Client/ClientIndex";
                        } else {
                            alert("Ops... Alguma coisa deu errado")
                        }
                    }
                })
            })
        })
        var Confirm = function (id) {
            $("#idDelete").val(id);
            $("#DeleteModal").modal('show');
        }
    </script>
}
