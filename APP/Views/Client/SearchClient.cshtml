@model ClientViewModel
@{
    Layout = "_LayoutHome";
}
<h1 style="color: #FFFFFF; padding: 10px 0 10px 0">Clientes</h1>
<div class="main-content">
    @if (Model.ClientModel.IsSave)
    {
        <div class="releases-message-success">
            <span style="font-weight: bolder;">Registro salvo com sucesso!</span>
        </div>
    }
    <div class="content-sidebar">
        <h4 style="color: #FFFFFF">Adiconar Cliente</h4>
        <form asp-action="Create" class="form-releases">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="d-flex flex-column" style="margin-bottom: .5rem;">
                <input asp-for="ClientModel.Name" placeholder="Nome Cliente" value="" class="input-style" style="width: 250px" />
                <span asp-validation-for="ClientModel.Name"></span>
            </div>
            <div class="d-flex flex-column" style="margin-bottom: .5rem;">
                <input asp-for="ClientModel.PhoneNumber" placeholder="Nº Telefone" value="" class="input-style" style="width: 250px" />
                <span asp-validation-for="ClientModel.PhoneNumber"></span>
            </div>
            <div style="width: 100%; display: grid; place-content: center">
                <input class="btn btn-success" type="submit" value="Salvar" />
            </div>
        </form>
    </div>
    <div class="content-page">
        <form asp-action="SearchClient">
            <input name="Name" value="" class="input-style" style="background-color: #aeaeae; width: 500px" placeholder="Pesquisar" autocomplete="off" />
            <input type="submit" value="Buscar" style="background-color: #0C5DF4;color: #FFFFFF; padding: 9px; border-radius: 5px; border: none" />
        </form>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Telefone</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Model.Clients)
                {
                    <tr>
                        <td>@Html.DisplayFor(p => client.Name)</td>
                        <td>@Html.DisplayFor(p => client.PhoneNumber)</td>
                        <td>
                            <a asp-controller="Client" asp-action="ClientDetails" asp-route-id="@client.Id" style="cursor: pointer;"><img src="~/icons/edit_black.svg" alt="edit" /></a>
                            <a id="showModal" onclick="Confirm(@client.Id)" style="cursor: pointer;"><img src="~/icons/delete.svg" alt="delete" /></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>